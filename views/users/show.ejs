<div class="card" style="width: 30rem; height: 30rem;">
	<img src="https://images.unsplash.com/photo-1511367461989-f85a21fda167?" class="card-img-top" alt="">
	<div class="card-body">
	  <h5 class="card-title"><%= user.username %> </h5>
	  <p class="card-text">Try to make your time worth it by making some adventures, because money will come and go, not the time!</p>
	  <a href="#" class="btn">Know More</a>
	</div>
  </div>
		<div class="row text-center flex-wrap" id="campground-grid">
			<% if(campgrounds.length>0){%>
				<h3><b><%= user.username %>'s Visited Campgrounds: </b></h3>
			<% campgrounds.forEach(function(campground){ %>
				<div class="col-md-3 col-sm-6">
					<div class="thumbnail">
					   <img src="<%= campground.image %>">
					   <div class="caption">
						   <h4><%= campground.name %></h4>
					   </div>
					   <p>
						   <a href="/campgrounds/<%= campground._id %>" class="btn btn-primary">More Info</a>
					   </p>
					</div>
				</div>
			<% }); %>
			<%}else{%> 
				<h1 class="lead"><b>No Campgrounds submitted yet</b></h1>
        <%}%>
		</div>

